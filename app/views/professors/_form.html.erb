
<%= form_for @professor do |f| %>
  <p>
    <%= fields_for @professor.person.nil? ? :person : @professor.person do |person_f| %>
      <%= render "people/person_fields", :f => person_f %>
    <% end %>
  </p>

  <p>
    <%= fields_for @professor.login.nil? ? :login : @professor.login do |login_f| %>
      <%= render "logins/login_fields", :f => login_f %>
    <% end %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
