<%= form_for @professor, html: {class: 'form-horizontal'} do |f| %>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= f.label :name, class: "col-sm-3 control-label"%>
      <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control"  %>
      </div>

      <%= f.submit "Save", class: "btn btn-default" %>
    </div>
  </div>

<% end %>
