<%= form_for @classroom do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :shift %><br>
    <%= f.text_field :shift %><br>
    <%= f.label :professor %><br>

    <% array = Professor.all.map { |professor| [professor.user.name, professor.id] } %>
    <%= select_tag "classroom[professor_ids][]", options_for_select(array) %>

    <br><%= f.label :student %><br>

    <% array = Student.all.map { |student| [student.name, student.id] } %>
    <%= select_tag "classroom[student_ids][]", options_for_select(array) %>


    <br><%= f.label :activity %><br>

    <% array = Activity.all.map { |activity| [activity.name, activity.id] } %>
    <%= select_tag "classroom[activity_ids][]", options_for_select(array) %>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
