<%= form_for @school, html: {class: 'form-horizontal'} do |f| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group">
        <%= f.label :school_name, class: "col-sm-3 control-label"%>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control"  %>
        </div>
      </div>
      <%= fields_for @school.professor.nil? ? :user : @school.professor.user do |user_f| %>
        <%= render "users/user_fields", :f => user_f %>
      <% end %>

      <%= f.submit "Save", class: "btn btn-default" %>

    </div>
  </div>
<% end %>
