
<h1>Activities</h1>

<table>
  <% @activities.each do |activity| %>
    <tr>
      <td><%= activity.name %></td>
      <td><%= link_to 'Show', activity_path(activity) %></td>
      <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
      <td><%= link_to 'Delete', activity_path(activity), method: :delete %></td>
    </tr>
  <% end %>
  <td><%= link_to 'New Activity', new_activity_path %></td>
</table>
