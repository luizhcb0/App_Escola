<%= form_for @student, html: {class: 'form-horizontal'} do |f| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <!-- Avatar selection -->
      <div class="form-inline" >
        <div>
          <div class="img-thumbnail text-center">
            <%= image_tag @student.avatar.url, :size => "200x200" %>
          </div>
        </div>
        <%= f.file_field :avatar, class:"form-control" %>
      </div>
      </br>

      <div class="form-group">
        <%= f.label :student_name, class: "col-sm-3 control-label"%>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, class: "col-sm-3 control-label"%>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :birthday, class: "col-sm-3 control-label"%>
        <div class="col-sm-6">
          <%= f.date_select :birthday, start_year: 1920 %>
        </div>
      </div>

      <%= fields_for :user, @user do |user_f| %>
        <%= render "users/user_fields", :f => user_f %>
      <% end %>

      <%= f.submit "Save", class: "btn btn-default" %>

    </div>
  </div>
<% end %>
