
<%= form_for @student do |f| %>
  <p>
    <%= fields_for @student.person.nil? ? :person : @student.person do |person_f| %>
      <%= render "people/person_fields", :f => person_f %>
    <% end %>
  </p>

  <p>
    <%= f.label :father_name %><br>
    <%= f.text_field :father_name %><br>
    <%= f.label :mother_name %><br>
    <%= f.text_field :mother_name %><br>
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, start_year: 1920 %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
