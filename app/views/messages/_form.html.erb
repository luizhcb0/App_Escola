<%= form_for @message do |f| %>
  <p>
    <%= f.label :to %><br>

    <%= select_tag "message[student_ids][]", options_for_select(students_array) %><br>

    <%# professor = Professor.where(user: current_user.id).first %>
    <%#= f.hidden_field :professor_id, :value => professor.id %>

    <%= f.hidden_field :professor_id, :value => current_user.professor.id %>

    <%= label_tag(:text) %><br>
    <%= f.text_area :text %><br>
  <p>
    <%= f.submit "Send" %>
  </p>
<% end %>
