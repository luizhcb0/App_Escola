<%= form_for message do |m| %>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1 message_form">

    <%= m.label :text, "Texto"%>
    <%= m.text_area :text, {class: "form-control message_box", rows: 6} %>

    <%= m.submit "Enviar", class: "btn btn-default" %>

    <%= m.hidden_field :sender_receiver, value: :classroom_student %>

    <%= m.hidden_field :classroom_ids, multiple: true, value: current_user.classroom.id %>
    <% students.each do |student| %>
      <%= m.hidden_field :student_ids, {multiple: true, id: "#{student.id}"}%>
    <% end %>

  </div>

</div>

<% end %>
