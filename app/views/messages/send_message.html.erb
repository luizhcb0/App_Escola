<h1>Send Message</h1>

<%= form_for @message, url: {action: "save_message"}, html: {} do |f| %>

  <%= label_tag(:to) %>

  <% array = Student.all.map { |student| [student.name, student.id] } %>
  <%= select_tag "message[student_ids][]", options_for_select(array) %><br>

  <% teste = Professor.where(user: current_user.id).first %>
  <%= teste.id %>

  <%= f.hidden_field :professor_id, :value => teste.id %>

  <%= label_tag(:text) %><br>
  <%= f.text_area :text %><br>

  <%= submit_tag("Send") %>
<% end %>
