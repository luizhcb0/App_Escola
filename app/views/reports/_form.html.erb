            <center>
              <%= student.name %>
            </center>
            <a onclick="selected($(this)); return false;" class="std_link thumbnail" id="<%= student.id.to_s %>">
              <img src="http://www.codeproject.com/KB/GDI-plus/ImageProcessing2/img.jpg" alt="">
