<%= form_for @report do |f| %>
  <div class="row">

    <%= f.hidden_field 'student_id', {id: 'student_id'} %>

    <div class="col-xs-12 col-sm-9">
      <h3 class="page-header">
        Crianças
      </h3>
      <div class="row">
        <%= form_tag search_reports_path do %><%end%><!-- needed to unbug the first kid -->
