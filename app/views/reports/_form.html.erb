              <%= hidden_field_tag :date, Date.today, class: "form-control" %>
              <%= hidden_field_tag :student_id, student.id %>
              <%= submit_tag "Search", class: "btn btn-primary btn-xs" %>
            <% end %>

          </div>
        <% end %>
      </div>
    </div>


