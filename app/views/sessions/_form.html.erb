<%= form_tag session_path do %>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= email_field_tag :email, nil, placeholder: 'Login', class: 'form-control' %>
          <!-- <input name="email" type="email" class="form-control" id="email" placeholder="login"> -->
	      </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
          <%= password_field_tag :password, nil, placeholder: 'Senha', class: "form-control" %>
          <!-- <input name="password" type="password" class="form-control" id="password" placeholder="Senha"> -->
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= submit_tag "Entrar", class: "sign-in btn btn-default" %>
  </div>

<% end %>
