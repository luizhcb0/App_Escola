<!DOCTYPE html>
<html>
  <head>
    <title>AppAgenda</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon-book.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active">
                <% if current_user %>
                  <%= link_to current_user.name, root_path %>
                <% else %>
                  <%= link_to root_path, class:"logo-nav" do %>
                    <i class="fa fa-book"></i>
                  <% end %>
                <% end %>
              </li>
              <li class="dropdown">
            		<a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Desce<span class="caret"></span></a>
            		<ul class="dropdown-menu">
              		<li><a href="quem_somos">1</a></li>
              		<li><a href="equipe">2</a></li>
            		</ul>
          		</li>
              <li><a href="contato">Contato</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <% if current_user %>
                  <%= link_to "Sign out", session_path, method: :delete %>
                <% else %>
                  <%= link_to "Sign in", new_session_path %>
                <% end %>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
    </nav>

    <%= yield %>

  </body>
</html>
