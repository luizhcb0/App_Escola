<section class="container-fluid">

  <h1>Options</h1>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <table class="table">
        <tbody>
          <% @options.each do |option| %>
            <tr>
              <td><%= option.name %></td>

              <td>
                <%= link_to option_path(option), class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-eye"></i>
                <% end %>
                <%= link_to edit_option_path(option), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to option_path(option), class:"btn btn-danger btn-circle", method:"delete" do %>
                 <i class="fa fa-trash-o"></i>
                <% end %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="">
      <%= link_to new_option_path do %>
        <button class="btn btn-default" name="button">New Option</button>
      <% end %>
  </div>

</section>
